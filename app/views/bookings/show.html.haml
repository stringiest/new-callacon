%h1.text-center Booking details
#booking-container.card.my-5.mx-auto
  %span.card-header
    - if @booking.user == current_user
      %span
        = link_to 'Edit', edit_booking_path(@booking)
        = button_to 'Delete', booking_path(@booking), method: :delete, data: { confirm: 'Are you sure?' }
  %span.d-inline-flex
    Arrival date:
    %p.text-justify.m-2= @booking.arrival
    Departure date:
    %p.text-justify.m-2= @booking.departure
    Cancellable?:
    %p.text-justify.m-2= @booking.cancellable
    Assistance fund donation:
    %p.text-justify.m-2= @booking.assistance_donate
    Assistance fund claim:
    %p.text-justify.m-2= @booking.assistance_claim
    Single person supplement:
    %p.text-justify.m-2= @booking.single_person
    No. of dogs:
    %p.text-justify.m-2= @booking.dog
